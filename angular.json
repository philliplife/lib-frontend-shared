{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "my-angular-lib": {
      "projectType": "library",
      "root": "projects/my-angular-lib",
      "sourceRoot": "projects/my-angular-lib/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/my-angular-lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/my-angular-lib/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/my-angular-lib/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/my-angular-lib/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        }
      }
    },
